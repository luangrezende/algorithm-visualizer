<Window x:Class="AlgorithmVisualizer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Algorithm Visualizer" Height="700" Width="1200" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MinimalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Algorithm Visualizer" 
                       FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />

        </Grid>

        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="0,10">
            <!-- Sorting Tab -->
            <TabItem Header="Sorting Algorithms">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Canvas Name="VisualizerCanvas" Background="LightGray" Width="1154" HorizontalAlignment="Center" Margin="0,0,0,10" />

                    <DockPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <ComboBox Name="AlgorithmSelector" Width="200" Margin="7,0" VerticalAlignment="Center">
                            <ComboBoxItem Content="Bubble Sort" />
                            <ComboBoxItem Content="Quick Sort" />
                            <ComboBoxItem Content="Merge Sort" />
                            <ComboBoxItem Content="Selection Sort" />
                            <ComboBoxItem Content="Heap Sort" />
                            <ComboBoxItem Content="Insertion Sort" />
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" Margin="2,0" HorizontalAlignment="Right" DockPanel.Dock="Right">
                            <Button Name="StartButton" Content="Start" Width="80" Margin="5" Style="{StaticResource MinimalButtonStyle}"/>
                            <Button Name="StopButton" Content="Stop" Width="80" Margin="5" Style="{StaticResource MinimalButtonStyle}"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </TabItem>

            <!-- Pathfinding Tab -->
            <TabItem Header="Pathfinding Algorithms">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Canvas Name="PathfindingCanvas" Background="LightGray" Width="1154" Height="550" HorizontalAlignment="Center" Margin="0,0,0,10" />

                    <DockPanel Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="2">
                        <ComboBox Name="PathfindingAlgorithmSelector" Width="200" Margin="7,0" VerticalAlignment="Center">
                            <ComboBoxItem Content="Breadth-First Search (BFS)" />
                            <ComboBoxItem Content="DFS (Depth-First Search)" />
                            <ComboBoxItem Content="Dijkstra" />
                            <ComboBoxItem Content="A* (A-Star)" />
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" Margin="2,0" HorizontalAlignment="Right" DockPanel.Dock="Right">
                            <Button Name="StartPathfindingButton" Content="Start" Width="80" Margin="5" Style="{StaticResource MinimalButtonStyle}"/>
                            <Button Name="ResetPathfindingButton" Content="Reset" Width="80" Margin="5" Style="{StaticResource MinimalButtonStyle}"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
